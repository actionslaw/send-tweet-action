{
  "name": "send-tweet-action",
  "version": "0.5.0",
  "private": true,
  "description": "Post a tweet during a GitHub Actions workflow",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "lint": "prettier --check **/*.ts",
    "pack": "ncc build",
    "test": "jest --passWithNoTests",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rg-wood/send-tweet-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Ric Wood",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "twitter-api-v2": "^1.15.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@vercel/ncc": "^0.38.1",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
